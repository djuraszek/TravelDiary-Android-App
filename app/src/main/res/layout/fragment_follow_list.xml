<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentFollowList">

    <ListView
        android:id="@+id/follow_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/no_following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:textAlignment="center"
        android:text="YOU ARE NOT FOLLOWING ANYONE \nAT THE MOMENT"
        android:layout_gravity="center"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/no_followers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:textAlignment="center"
        android:text="NO ONE IS FOLLOWING YOU AT THE MOMENT"
        android:layout_gravity="center"
        android:textSize="20sp"
        />

</FrameLayout>